.page-header
  %h1
    Iron Shop
    %small Ruling ecommerce with an Iron fist.

= form_tag root_path, class: "form", method: :get do
  .form-group.col-lg-10
    = text_field_tag :query, params[:query], class: "form-control"
  = submit_tag "Search", name: nil, class: "btn"
  = link_to "Reset", root_path

%table.table.table-striped
  %thead
    %tr
      %th Item
      %th price
  %tbody
    - @items.each do |item|
      %tr
        %th= link_to item.title, item_path(item)
        %th= item.price
