.page-header
  %h1
    Iron Shop
    %small Ruling ecommerce with an Iron fist.
.angular-div(ng-controller='indexCtrl')
  %form.col-md-10(ng-submit="search()")
    .form-group.col-md-6
      %input{:type => "text", :class => "form-control", :name => "search", :placeholder => "Seach products!"}(ng-model="text")
    .col-md-3
      %input{:type => "submit", :id => "submit", :value => "submit", :class => "btn btn-default"}
    %hr
  %table.table.table-striped()
    %thead
      %tr
        %th Item
        %th Description
        %th Price
    %tbody
      %tr(ng-repeat="item in items")
        %td
          %a(ng-href="/items/{{item.id}}")
            {{item.title}}
        %td
          {{item.description | characters:100 :true }}
        %td
          {{item.price}}
