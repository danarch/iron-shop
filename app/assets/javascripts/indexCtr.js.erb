  var itemResource = $resource(
    '/items/'
  );
  $scope.items = itemResource.query();


  $scope.search = function() {
    if($scope.text) {
      $scope.text === this.text;

      var searchResource = $resource(
        '/items/?utf8=âœ“&query=:query', {query: $scope.text}
      );
